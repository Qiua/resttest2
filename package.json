{
  "name": "rest-test-app",
  "private": true,
  "description": "A React application for testing REST APIs with a focus on TypeScript and Tailwind CSS.",
  "author": "Andrey Aires",
  "license": "GPL-3.0-or-later",
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "type-check": "tsc --noEmit",
    "quality": "npm run type-check && npm run lint && npm run format:check",
    "quality:fix": "npm run type-check && npm run lint:fix && npm run format",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/react-window": "^1.8.8",
    "axios": "^1.10.0",
    "country-flag-icons": "^1.5.19",
    "dompurify": "^3.3.0",
    "i18next": "^25.2.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.5.3",
    "react-icons": "^5.5.0",
    "react-resizable-panels": "^3.0.3",
    "react-syntax-highlighter": "^16.0.0",
    "react-window": "^2.2.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@tailwindcss/vite": "^4.1.10",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "@vitest/ui": "^4.0.4",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "happy-dom": "^20.0.8",
    "jsdom": "^27.0.1",
    "tailwindcss": "^4.1.10",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vitest": "^4.0.4"
  }
}
